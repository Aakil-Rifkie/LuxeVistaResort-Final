<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#F9F9F9"
    android:layout_marginBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/roomImageDisplay"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/roomimage" />

    <TextView
        android:id="@+id/roomNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/roomDescriptionDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Description"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/roomPriceDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $0.00"
        android:textStyle="bold"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/bookRoomButtonDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ECEDB0"
        android:textColor="@color/black"
        android:text="Book Room"
        android:layout_marginTop="8dp" />


</LinearLayout>
